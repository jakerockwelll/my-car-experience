---
import "../styles/global.css";

export interface Props {
	title?: string;
	description?: string;
}

const { title = "Car Experience", description = "Premium driving experiences with vintage cars and trucks." } = Astro.props as Props;
---

<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url?.href || ""} />
		<meta property="og:image" content="/images/rover-hero-image.png" />
		<link rel="preload" as="image" href="/images/rover-hero-image.png" imagesrcset="/images/rover-hero-image.png 1x" />
		<meta name="twitter:card" content="summary_large_image" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700;800&display=swap" rel="stylesheet" />
	</head>
	<body class="min-h-dvh bg-white text-gray-900 antialiased">
		<header class="sticky top-0 z-40 w-full border-b border-gray-200 bg-white/80 backdrop-blur supports-[backdrop-filter]:bg-white/60">
			<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
				<a href="/" class="flex items-center h-12">
					<img src="/images/landrover-logo.jpg" alt="Land Rover logo" class="h-10 w-auto" />
				</a>
				<nav class="hidden sm:flex items-center gap-5 text-xs">
					<a href="/models" class="hover:text-[#004b2d] uppercase tracking-wide">Models</a>
					<a href="/gallery" class="hover:text-[#004b2d] uppercase tracking-wide">Gallery</a>
					<a href="/#experiences" class="hover:text-[#004b2d] uppercase tracking-wide">Experiences</a>
					<a href="/#factory" class="hover:text-[#004b2d] uppercase tracking-wide">Factory Tours</a>
					<a href="/#contact" class="hover:text-[#004b2d] uppercase tracking-wide">Contact</a>
					<a href="/#booking" class="inline-flex items-center bg-[#004b2d] text-white uppercase tracking-wide text-[11px] px-4 py-2 rounded-none hover:bg-[#003e25]">Book Now</a>
				</nav>
			</div>
		</header>
		<main>
			<slot />
		</main>
		<footer class="mt-20 border-t border-gray-200">
			<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10 text-sm text-gray-600 flex flex-col sm:flex-row items-center justify-between gap-4">
				<p>Â© {new Date().getFullYear()} Car Experience. All rights reserved.</p>
				<p>Inspired by the structure of <a class="underline hover:text-gray-900" href="https://experience.landrover.co.uk/solihull/overview.html" rel="noopener noreferrer" target="_blank">Land Rover Experience Solihull</a>.</p>
			</div>
		</footer>
	</body>
</html>
