---
import Layout from "../layouts/Layout.astro";

type ModelItem = { title: string; image: string; href?: string };

const models: Array<ModelItem> = [
	{ title: "Series 2 & 2A & 3", image: "/images/rover-types/series-2-2a-3.svg" },
	{ title: "Land Rover Defender 1983 - 2016", image: "/images/rover-types/land-rover-defender-2.svg" },
	{ title: "New Defender from 2020", image: "/images/rover-types/new-defender-from-2020.svg" },
	{ title: "Discovery 1", image: "/images/rover-types/discovery-1-1.svg" },
	{ title: "Discovery 2", image: "/images/rover-types/discovery-2.svg" },
	{ title: "Discovery 3", image: "/images/rover-types/discovery-3.svg" },
	{ title: "Discovery 4", image: "/images/rover-types/discovery-4.svg" },
	{ title: "Discovery 5", image: "/images/rover-types/discovery-5.svg" },
	{ title: "Discovery Sport", image: "/images/rover-types/discovery-sport.svg" },
	{ title: "Range Rover Classic", image: "/images/rover-types/range-rover-classic.svg" },
	{ title: "Range Rover P38", image: "/images/rover-types/range-rover-p38.svg" },
	{ title: "Range Rover L322 02-09", image: "/images/rover-types/range-rover-l322-02-09.svg" },
	{ title: "Range Rover L405 2012-2022", image: "/images/rover-types/range-rover-l405-2012-2022.svg" },
	{ title: "Range Rover L460 2022-", image: "/images/rover-types/range-rover-l460-2022.svg" },
	{ title: "Range Rover Evoque 12-19", image: "/images/rover-types/range-rover-evoque-12-19.svg" },
	{ title: "Range Rover Evoque 2019 On", image: "/images/rover-types/range-rover-evoque-2019-on.svg" },
	{ title: "Range Rover Sport 06-09", image: "/images/rover-types/range-rover-sport-06-09.svg" },
	{ title: "Range Rover Sport 09-13", image: "/images/rover-types/range-rover-sport-09-13.svg" },
	{ title: "Range Rover Sport L494 2013-2022", image: "/images/rover-types/range-rover-sport-l494-2013-2022.svg" },
	{ title: "Range Rover Sport L461 2023-", image: "/images/rover-types/range-rover-sport-l461-2023.svg" },
	{ title: "Range Rover Velar", image: "/images/rover-types/range-rover-velar.svg" },
	{ title: "Freelander 1", image: "/images/rover-types/freelander-1.svg" },
	{ title: "Freelander 2", image: "/images/rover-types/freelander-2.svg" },
];
---

<Layout title="Models" description="Select your vehicle model">
	<section class="py-10 sm:py-16">
		<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
			<h1 class="text-3xl font-bold tracking-tight">Select Your Vehicle</h1>
			<p class="mt-3 lr-body-copy">Explore Land Rover and Range Rover families.</p>

			<div class="mt-8 grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-4">
				{models.map((m) => (
					<a href={m.href || "/gallery"} class="group block bg-white border border-gray-200 rounded-md text-center p-4 hover:shadow-sm transition-shadow">
						<div class="aspect-[4/3] w-full flex items-center justify-center overflow-hidden">
							<img src={m.image} alt={m.title} class="max-h-24 w-auto object-contain" loading="lazy" decoding="async" />
						</div>
						<p class="mt-3 text-sm font-medium text-gray-900 group-hover:underline">{m.title}</p>
					</a>
				))}
			</div>
			<p class="mt-6 text-xs text-gray-600">Inspired by the layout of the LR Parts “Select Your Vehicle” page. See reference: <a href="https://www.lrparts.net/vehicle.html" target="_blank" rel="noopener noreferrer" class="underline">LR Parts</a>.</p>
		</div>
	</section>
</Layout>


